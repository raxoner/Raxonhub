-- Creating UI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 300, 0, 350)
Frame.Position = UDim2.new(0.5, -150, 0.5, -175)
Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Frame.Parent = ScreenGui

local MinimizeButton = Instance.new("TextButton")
MinimizeButton.Size = UDim2.new(0, 100, 0, 50)
MinimizeButton.Position = UDim2.new(0, 0, 0, -50)
MinimizeButton.Text = "Minimize"
MinimizeButton.Parent = Frame

local RemoveButton = Instance.new("TextButton")
RemoveButton.Size = UDim2.new(0, 100, 0, 50)
RemoveButton.Position = UDim2.new(0, 200, 0, -50)
RemoveButton.Text = "Remove"
RemoveButton.Parent = Frame

local CopyJobButton = Instance.new("TextButton")
CopyJobButton.Size = UDim2.new(0, 200, 0, 50)
CopyJobButton.Position = UDim2.new(0, 50, 0, 50)
CopyJobButton.Text = "Copy Job ID"
CopyJobButton.Parent = Frame

local JoinJobButton = Instance.new("TextButton")
JoinJobButton.Size = UDim2.new(0, 200, 0, 50)
JoinJobButton.Position = UDim2.new(0, 50, 0, 110)
JoinJobButton.Text = "Join Job ID"
JoinJobButton.Parent = Frame

local WalkSpeedSlider = Instance.new("Slider")
WalkSpeedSlider.Size = UDim2.new(0, 200, 0, 50)
WalkSpeedSlider.Position = UDim2.new(0, 50, 0, 170)
WalkSpeedSlider.MinValue = 10
WalkSpeedSlider.MaxValue = 300
WalkSpeedSlider.Text = "Walk Speed"
WalkSpeedSlider.Parent = Frame

local FlyHeightSlider = Instance.new("Slider")
FlyHeightSlider.Size = UDim2.new(0, 200, 0, 50)
FlyHeightSlider.Position = UDim2.new(0, 50, 0, 230)
FlyHeightSlider.MinValue = 5
FlyHeightSlider.MaxValue = 600
FlyHeightSlider.Text = "Fly Height"
FlyHeightSlider.Parent = Frame

local OnOffButton = Instance.new("TextButton")
OnOffButton.Size = UDim2.new(0, 200, 0, 50)
OnOffButton.Position = UDim2.new(0, 50, 0, 290)
OnOffButton.Text = "On/Off"
OnOffButton.Parent = Frame

local InfiniteJumpToggle = Instance.new("TextButton")
InfiniteJumpToggle.Size = UDim2.new(0, 200, 0, 50)
InfiniteJumpToggle.Position = UDim2.new(0, 50, 0, 350)
InfiniteJumpToggle.Text = "Infinite Jump"
InfiniteJumpToggle.Parent = Frame

local minimized = false
local jobID = "123456789"  -- Example Job ID
local flying = false
local infiniteJump = false

-- Minimize functionality
MinimizeButton.MouseButton1Click:Connect(function()
    if minimized then
        Frame.Size = UDim2.new(0, 300, 0, 350)
        MinimizeButton.Text = "Minimize"
    else
        Frame.Size = UDim2.new(0, 300, 0, 50)
        MinimizeButton.Text = "Restore"
    end
    minimized = not minimized
end)

-- Remove functionality
RemoveButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Copy Job ID functionality
CopyJobButton.MouseButton1Click:Connect(function()
    setclipboard(jobID)
    print("Job ID copied: " .. jobID)
end)

-- Join Job ID functionality
JoinJobButton.MouseButton1Click:Connect(function()
    game:GetService("TeleportService"):Teleport(jobID)
    print("Joining job with ID: " .. jobID)
end)

-- Walk Speed Slider
WalkSpeedSlider.Changed:Connect(function()
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = WalkSpeedSlider.Value
end)

-- Fly Height Slider
FlyHeightSlider.Changed:Connect(function()
    if flying then
        game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(game.Players.LocalPlayer.Character.HumanoidRootPart.Position + Vector3.new(0, FlyHeightSlider.Value, 0))
    end
end)

-- On/Off Toggle
OnOffButton.MouseButton1Click:Connect(function()
    flying = not flying
    OnOffButton.Text = flying and "Flying On" or "Flying Off"
end)

-- Infinite Jump Toggle
InfiniteJumpToggle.MouseButton1Click:Connect(function()
    infiniteJump = not infiniteJump
    InfiniteJumpToggle.Text = infiniteJump and "Infinite Jump On" or "Infinite Jump Off"
    local humanoid = game.Players.LocalPlayer.Character:WaitForChild("Humanoid")
    humanoid.JumpPower = infiniteJump and 100 or 50
end)
