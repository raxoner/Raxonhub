-- CapybaraHub.lua (LocalScript)
local UIUtils = require(game.ReplicatedStorage.UIUtils)
local TeleportService = game:GetService("TeleportService")
local Players = game:GetService("Players")

-- Mengambil ScreenGui
local screenGui = script.Parent

-- Membuat background frame dengan gambar laut
local oceanBackground = UIUtils.createFrame(screenGui, UDim2.new(0, 500, 0, 400), UDim2.new(0.5, -250, 0.5, -200), Color3.fromRGB(255, 255, 255), "rbxassetid://123456789")  -- Ganti dengan ID gambar laut Anda

-- Menambahkan judul Capybara Hub
local title = UIUtils.createLabel(oceanBackground, "Capybara Hub", UDim2.new(1, 0, 0, 50), UDim2.new(0, 0, 0, 0), 36, Color3.fromRGB(255, 255, 255))

-- Menambahkan tombol untuk petualangan
local adventureButton = UIUtils.createButton(oceanBackground, "Start Adventure", UDim2.new(0, 200, 0, 50), UDim2.new(0.5, -100, 0.5, 50), function()
    print("Adventure Started!")
end)

-- Menambahkan tombol untuk info capybara
local infoButton = UIUtils.createButton(oceanBackground, "Capybara Info", UDim2.new(0, 200, 0, 50), UDim2.new(0.5, -100, 0.5, 120), function()
    print("Displaying Capybara Info!")
end)

-- Menambahkan tombol keluar
local exitButton = UIUtils.createButton(oceanBackground, "Exit", UDim2.new(0, 200, 0, 50), UDim2.new(0.5, -100, 0.5, 190), function()
    game:Shutdown()  -- Menutup game saat tombol Exit diklik
end)

-- Menambahkan tombol untuk menyalin Job ID
local copyJobIDButton = UIUtils.createButton(oceanBackground, "Copy Job ID", UDim2.new(0, 200, 0, 50), UDim2.new(0.5, -100, 0.5, 260), function()
    local jobID = game.JobId
    setclipboard(jobID)
    print("Job ID copied: " .. jobID)
end)

-- Menambahkan input box untuk memasukkan Job ID
local jobIDInputBox = UIUtils.createTextBox(oceanBackground, UDim2.new(0, 200, 0, 50), UDim2.new(0.5, -100, 0.5, 330), "Enter Job ID")

-- Menambahkan tombol untuk bergabung ke server dengan Job ID yang dimasukkan
local joinServerButton = UIUtils.createButton(oceanBackground, "Join Server", UDim2.new(0, 200, 0, 50), UDim2.new(0.5, -100, 0.5, 400), function()
    local jobID = jobIDInputBox.Text
    if jobID ~= "" then
        -- Teleport ke server dengan Job ID yang dimasukkan
        TeleportService:TeleportToPlaceInstance(game.PlaceId, jobID, Players.LocalPlayer)
        print("Attempting to join server with Job ID: " .. jobID)
    else
        print("Please enter a valid Job ID.")
    end
end)
