-- CapybaraHub.lua (LocalScript)
local TeleportService = game:GetService("TeleportService")
local Players = game:GetService("Players")

-- Mengambil ScreenGui
local screenGui = script.Parent

-- Membuat background frame dengan gambar laut
local oceanBackground = Instance.new("Frame")
oceanBackground.Size = UDim2.new(0, 500, 0, 400)
oceanBackground.Position = UDim2.new(0.5, -250, 0.5, -200)
oceanBackground.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
oceanBackground.BackgroundTransparency = 0.5
oceanBackground.Image = "rbxassetid://123456789"  -- Ganti dengan ID gambar laut Anda
oceanBackground.Parent = screenGui

-- Menambahkan judul Capybara Hub
local title = Instance.new("TextLabel")
title.Text = "Capybara Hub"
title.Size = UDim2.new(1, 0, 0, 50)
title.Position = UDim2.new(0, 0, 0, 0)
title.TextSize = 36
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Parent = oceanBackground

-- Menambahkan tombol untuk petualangan
local adventureButton = Instance.new("TextButton")
adventureButton.Text = "Start Adventure"
adventureButton.Size = UDim2.new(0, 200, 0, 50)
adventureButton.Position = UDim2.new(0.5, -100, 0.5, 50)
adventureButton.TextSize = 18
adventureButton.BackgroundColor3 = Color3.fromRGB(0, 128, 255)
adventureButton.TextColor3 = Color3.fromRGB(255, 255, 255)
adventureButton.Parent = oceanBackground
adventureButton.MouseButton1Click:Connect(function()
    print("Adventure Started!")
end)

-- Menambahkan tombol untuk info capybara
local infoButton = Instance.new("TextButton")
infoButton.Text = "Capybara Info"
infoButton.Size = UDim2.new(0, 200, 0, 50)
infoButton.Position = UDim2.new(0.5, -100, 0.5, 120)
infoButton.TextSize = 18
infoButton.BackgroundColor3 = Color3.fromRGB(0, 128, 255)
infoButton.TextColor3 = Color3.fromRGB(255, 255, 255)
infoButton.Parent = oceanBackground
infoButton.MouseButton1Click:Connect(function()
    print("Displaying Capybara Info!")
end)

-- Menambahkan tombol keluar
local exitButton = Instance.new("TextButton")
exitButton.Text = "Exit"
exitButton.Size = UDim2.new(0, 200, 0, 50)
exitButton.Position = UDim2.new(0.5, -100, 0.5, 190)
exitButton.TextSize = 18
exitButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
exitButton.TextColor3 = Color3.fromRGB(255, 255, 255)
exitButton.Parent = oceanBackground
exitButton.MouseButton1Click:Connect(function()
    game:Shutdown()  -- Menutup game saat tombol Exit diklik
end)

-- Menambahkan tombol untuk menyalin Job ID
local copyJobIDButton = Instance.new("TextButton")
copyJobIDButton.Text = "Copy Job ID"
copyJobIDButton.Size = UDim2.new(0, 200, 0, 50)
copyJobIDButton.Position = UDim2.new(0.5, -100, 0.5, 260)
copyJobIDButton.TextSize = 18
copyJobIDButton.BackgroundColor3 = Color3.fromRGB(0, 128, 255)
copyJobIDButton.TextColor3 = Color3.fromRGB(255, 255, 255)
copyJobIDButton.Parent = oceanBackground
copyJobIDButton.MouseButton1Click:Connect(function()
    local jobID = game.JobId
    setclipboard(jobID)
    print("Job ID copied: " .. jobID)
end)

-- Menambahkan input box untuk memasukkan Job ID
local jobIDInputBox = Instance.new("TextBox")
jobIDInputBox.Size = UDim2.new(0, 200, 0, 50)
jobIDInputBox.Position = UDim2.new(0.5, -100, 0.5, 330)
jobIDInputBox.PlaceholderText = "Enter Job ID"
jobIDInputBox.TextSize = 18
jobIDInputBox.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
jobIDInputBox.Parent = oceanBackground

-- Menambahkan tombol untuk bergabung ke server dengan Job ID yang dimasukkan
local joinServerButton = Instance.new("TextButton")
joinServerButton.Text = "Join Server"
joinServerButton.Size = UDim2.new(0, 200, 0, 50)
joinServerButton.Position = UDim2.new(0.5, -100, 0.5, 400)
joinServerButton.TextSize = 18
joinServerButton.BackgroundColor3 = Color3.fromRGB(0, 128, 255)
joinServerButton.TextColor3 = Color3.fromRGB(255, 255, 255)
joinServerButton.Parent = oceanBackground
joinServerButton.MouseButton1Click:Connect(function()
    local jobID = jobIDInputBox.Text
    if jobID ~= "" then
        -- Teleport ke server dengan Job ID yang dimasukkan
        TeleportService:TeleportToPlaceInstance(game.PlaceId, jobID, Players.LocalPlayer)
        print("Attempting to join server with Job ID: " .. jobID)
    else
        print("Please enter a valid Job ID.")
    end
end)
