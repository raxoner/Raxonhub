local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Main Frame for UI
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 400, 0, 250)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -125)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 2
mainFrame.BorderColor3 = Color3.fromRGB(100, 100, 100)
mainFrame.Parent = screenGui

-- Title Label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(0, 400, 0, 50)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
titleLabel.Text = "Job ID Server Tools"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 24
titleLabel.TextAlign = Enum.TextXAlignment.Center
titleLabel.Parent = mainFrame

-- Job ID Display (for current job)
local jobIdDisplayLabel = Instance.new("TextLabel")
jobIdDisplayLabel.Size = UDim2.new(0, 300, 0, 40)
jobIdDisplayLabel.Position = UDim2.new(0, 50, 0, 60)
jobIdDisplayLabel.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
jobIdDisplayLabel.Text = "Current Job ID: " .. game.JobId
jobIdDisplayLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
jobIdDisplayLabel.TextSize = 18
jobIdDisplayLabel.TextWrapped = true
jobIdDisplayLabel.TextXAlignment = Enum.TextXAlignment.Left
jobIdDisplayLabel.Parent = mainFrame

-- Copy Job ID Button
local copyJobButton = Instance.new("TextButton")
copyJobButton.Size = UDim2.new(0, 150, 0, 40)
copyJobButton.Position = UDim2.new(0, 50, 0, 120)
copyJobButton.BackgroundColor3 = Color3.fromRGB(40, 120, 255)
copyJobButton.Text = "Copy Job ID"
copyJobButton.TextColor3 = Color3.fromRGB(255, 255, 255)
copyJobButton.TextSize = 18
copyJobButton.Parent = mainFrame

-- Job ID Input Field for joining
local jobIdInput = Instance.new("TextBox")
jobIdInput.Size = UDim2.new(0, 300, 0, 40)
jobIdInput.Position = UDim2.new(0, 50, 0, 170)
jobIdInput.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
jobIdInput.Text = ""
jobIdInput.PlaceholderText = "Enter Job ID to Join"
jobIdInput.TextColor3 = Color3.fromRGB(255, 255, 255)
jobIdInput.TextSize = 18
jobIdInput.ClearTextOnFocus = true
jobIdInput.Parent = mainFrame

-- Join Job Button
local joinJobButton = Instance.new("TextButton")
joinJobButton.Size = UDim2.new(0, 150, 0, 40)
joinJobButton.Position = UDim2.new(0, 50, 0, 220)
joinJobButton.BackgroundColor3 = Color3.fromRGB(40, 255, 120)
joinJobButton.Text = "Join Job ID"
joinJobButton.TextColor3 = Color3.fromRGB(255, 255, 255)
joinJobButton.TextSize = 18
joinJobButton.Parent = mainFrame

-- Function to Copy Job ID to Clipboard
copyJobButton.MouseButton1Click:Connect(function()
    local jobId = game.JobId
    setclipboard(jobId)  -- Copy current job ID to clipboard
end)

-- Function to Join Job ID
joinJobButton.MouseButton1Click:Connect(function()
    local enteredJobId = jobIdInput.Text
    if enteredJobId ~= "" then
        local success, message = pcall(function()
            game:GetService("TeleportService"):TeleportToPlaceInstance(game.PlaceId, enteredJobId, player)
        end)
        
        if not success then
            warn("Failed to join Job ID: " .. message)
        end
    else
        warn("Please enter a valid Job ID.")
    end
end)
