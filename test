local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Main Frame for UI
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 200)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -100)
mainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
mainFrame.Parent = screenGui

-- Minimize Button
local minimizeButton = Instance.new("TextButton")
minimizeButton.Size = UDim2.new(0, 50, 0, 30)
minimizeButton.Position = UDim2.new(0, 250, 0, 0)
minimizeButton.Text = "-"
minimizeButton.Parent = mainFrame

-- Close Button
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 50, 0, 30)
closeButton.Position = UDim2.new(0, 250, 0, 30)
closeButton.Text = "X"
closeButton.Parent = mainFrame

-- Job ID Copy Button
local copyJobButton = Instance.new("TextButton")
copyJobButton.Size = UDim2.new(0, 200, 0, 50)
copyJobButton.Position = UDim2.new(0, 50, 0, 60)
copyJobButton.Text = "Copy Job ID"
copyJobButton.Parent = mainFrame

-- Job ID Join Button
local joinJobButton = Instance.new("TextButton")
joinJobButton.Size = UDim2.new(0, 200, 0, 50)
joinJobButton.Position = UDim2.new(0, 50, 0, 120)
joinJobButton.Text = "Join Job ID"
joinJobButton.Parent = mainFrame

-- Minimize Functionality
local minimized = false
minimizeButton.MouseButton1Click:Connect(function()
    minimized = not minimized
    if minimized then
        -- Minimize: Hide the content but keep the frame visible
        mainFrame.Size = UDim2.new(0, 300, 0, 50)
        copyJobButton.Visible = false
        joinJobButton.Visible = false
    else
        -- Restore: Show the content again
        mainFrame.Size = UDim2.new(0, 300, 0, 200)
        copyJobButton.Visible = true
        joinJobButton.Visible = true
    end
end)

-- Close Functionality
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()  -- This will delete the UI when the close button is clicked
end)

-- Copy Job ID
copyJobButton.MouseButton1Click:Connect(function()
    local jobId = game.JobId
    setclipboard(jobId)  -- Copy job ID to clipboard
end)

-- Join Job ID
joinJobButton.MouseButton1Click:Connect(function()
    local jobId = game.JobId  -- Replace this with the Job ID you want to join
    game:GetService("TeleportService"):TeleportToPlaceInstance(game.PlaceId, jobId, player)  -- Teleport to the server using Job ID
end)
