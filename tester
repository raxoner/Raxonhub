-- Menambahkan jam dari beberapa negara
local timeZoneLabels = {}

local function updateTimeZones()
    -- Mendapatkan waktu lokal dan menyesuaikan untuk zona waktu
    local function getTimeInZone(offset)
        local currentTime = os.time()
        local targetTime = currentTime + (offset * 3600)  -- Menghitung offset waktu dalam detik
        return os.date("%H:%M:%S", targetTime)
    end

    -- Daftar negara dan offset waktu (dalam jam)
    local timeZones = {
        {name = "Amerika (GMT-5)", offset = -5},
        {name = "Inggris (GMT)", offset = 0},
        {name = "Indonesia (GMT+7)", offset = 7},
    }

    -- Menampilkan waktu untuk setiap negara
    for i, zone in ipairs(timeZones) do
        local label = timeZoneLabels[i]
        if not label then
            label = Instance.new("TextLabel")
            label.Size = UDim2.new(1, -20, 0, 30)
            label.Position = UDim2.new(0, 10, 0, 290 + (i - 1) * 35)
            label.TextColor3 = Color3.fromRGB(255, 255, 255)
            label.BackgroundTransparency = 1
            label.Font = Enum.Font.SourceSans
            label.TextSize = 16
            label.Parent = frame
            timeZoneLabels[i] = label
        end
        label.Text = zone.name .. ": " .. getTimeInZone(zone.offset)
    end
end

-- Tombol untuk update waktu
local updateTimeButton = Instance.new("TextButton")
updateTimeButton.Text = "Update Waktu"
updateTimeButton.Size = UDim2.new(1, -20, 0, 40)
updateTimeButton.Position = UDim2.new(0, 10, 0, 370)
updateTimeButton.BackgroundColor3 = Color3.fromRGB(30, 144, 255)
updateTimeButton.Parent = frame

-- Update waktu saat tombol ditekan
updateTimeButton.MouseButton1Click:Connect(function()
    updateTimeZones()
end)

-- Fungsi Minimize UI (Menyembunyikan Semua Elemen dengan Visible)
local minimized = false
minimizeButton.MouseButton1Click:Connect(function()
    if minimized then
        -- Restore frame size dan tampilkan kembali semua elemen
        frame.Size = UDim2.new(0, 600, 0, 400)
        minimizeButton.Text = "−"
        copyJobButton.Visible = true
        joinJobButton.Visible = true
        hopServerButton.Visible = true
        rejoinButton.Visible = true
        jobIdTextBox.Visible = true
        updateTimeButton.Visible = true
        for _, label in ipairs(timeZoneLabels) do
            label.Visible = true
        end
    else
        -- Minimize frame dan sembunyikan semua elemen
        frame.Size = UDim2.new(0, 600, 0, 30)
        minimizeButton.Text = "+"
        copyJobButton.Visible = false
        joinJobButton.Visible = false
        hopServerButton.Visible = false
        rejoinButton.Visible = false
        jobIdTextBox.Visible = false
        updateTimeButton.Visible = false
        for _, label in ipairs(timeZoneLabels) do
            label.Visible = false
        end
    end
    minimized = not minimized
end)

-- Fungsi Hapus UI Selamanya
local function removeUI()
    screenGui:Destroy()
    print("UI telah dihapus selamanya.")
end

-- Tombol untuk Hapus UI Selamanya
removeUIButton.MouseButton1Click:Connect(function()
    removeUI()
end)

-- Fungsi Copy Job ID ke Clipboard
copyJobButton.MouseButton1Click:Connect(function()
    if setclipboard then
        setclipboard(jobId)
        print("Job ID disalin:", jobId)
    else
        print("Executor tidak mendukung setclipboard.")
    end
end)

-- Fungsi Join ke Server dengan Job ID
joinJobButton.MouseButton1Click:Connect(function()
    local jobInput = jobIdTextBox.Text
    if jobInput and jobInput ~= "" then
        print("Mencoba join server dengan Job ID:", jobInput)
        TeleportService:TeleportToPlaceInstance(game.PlaceId, jobInput, player)
    else
        print("Masukkan Job ID terlebih dahulu!")
    end
end)

-- Fungsi Hop Server (Pindah Server Acak)
hopServerButton.MouseButton1Click:Connect(function()
    local servers = TeleportService:GetTeleportSetting("Servers")  -- Mendapatkan daftar server
    local randomServer = servers[math.random(1, #servers)]  -- Memilih server acak
    print("Mencoba hop ke server baru...")
    TeleportService:TeleportToPlaceInstance
