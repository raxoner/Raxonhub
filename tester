-- Tombol Loadstring
local loadStringButton = Instance.new("TextButton")
loadStringButton.Text = "Loadstring"
loadStringButton.Size = UDim2.new(1, -20, 0, 40)
loadStringButton.Position = UDim2.new(0, 10, 0, 500)
loadStringButton.BackgroundColor3 = Color3.fromRGB(255, 140, 0)
loadStringButton.Parent = frame

-- TextBox untuk Masukkan Kode Lua Mentah
local luaCodeTextBox = Instance.new("TextBox")
luaCodeTextBox.Size = UDim2.new(1, -20, 0, 60)
luaCodeTextBox.Position = UDim2.new(0, 10, 0, 550)
luaCodeTextBox.Text = "Masukkan kode Lua di sini"
luaCodeTextBox.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
luaCodeTextBox.TextColor3 = Color3.fromRGB(0, 0, 0)
luaCodeTextBox.ClearTextOnFocus = true
luaCodeTextBox.Parent = frame

-- Fungsi Loadstring (Menjalankan Kode Lua yang dimasukkan oleh pengguna)
loadStringButton.MouseButton1Click:Connect(function()
    local luaCode = luaCodeTextBox.Text  -- Mengambil kode Lua yang dimasukkan pengguna
    if luaCode and luaCode ~= "" then
        local func, err = loadstring(luaCode)  -- Menyusun dan memuat kode Lua
        if func then
            local success, result = pcall(func)  -- Menjalankan kode Lua dalam pcall untuk menangani kesalahan
            if not success then
                print("Terjadi kesalahan dalam kode Lua:", result)  -- Menampilkan error jika ada
            end
        else
            print("Terjadi kesalahan dalam loadstring:", err)  -- Menampilkan error jika loadstring gagal
        end
    else
        print("Masukkan kode Lua yang valid!")  -- Memberikan pesan jika teks kosong
    end
end)

-- Fungsi lainnya (misalnya tombol rejoin, hop server, dll) tetap sama dengan sebelumnya
