jobIDTextBox.PlaceholderText = "Enter Job ID"
jobIDTextBox.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
jobIDTextBox.TextColor3 = Color3.fromRGB(0, 0, 0)
jobIDTextBox.Parent = frame

-- Button to Join Server by Job ID
local joinJobIDButton = Instance.new("TextButton")
joinJobIDButton.Text = "Join Server by Job ID"
joinJobIDButton.Size = UDim2.new(0, 200, 0, 40)
joinJobIDButton.Position = UDim2.new(0.5, -100, 0, 200)
joinJobIDButton.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
joinJobIDButton.TextColor3 = Color3.fromRGB(255, 255, 255)
joinJobIDButton.Parent = frame

-- Copy Job ID Button
local copyJobIDButton = Instance.new("TextButton")
copyJobIDButton.Text = "Copy Job ID"
copyJobIDButton.Size = UDim2.new(0, 150, 0, 40)
copyJobIDButton.Position = UDim2.new(0.5, -75, 0, 250)
copyJobIDButton.BackgroundColor3 = Color3.fromRGB(255, 150, 0)
copyJobIDButton.TextColor3 = Color3.fromRGB(0, 0, 0)
copyJobIDButton.Parent = frame

-- Dragging functionality (for both PC and mobile)
local dragging = false
local dragInput, mousePos, framePos

local function updatePosition(input)
    local delta = input.Position - mousePos
    frame.Position = UDim2.new(
        framePos.X.Scale, framePos.X.Offset + delta.X,
        framePos.Y.Scale, framePos.Y.Offset + delta.Y
    )
end

header.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        mousePos = input.Position
        framePos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

header.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        updatePosition(input)
    end
end)

-- Hop Server Function
hopServerButton.MouseButton1Click:Connect(function()
    local servers = {}
    local req = syn.request({
        Url = "https://games.roblox.com/v1/games/" .. game.PlaceId .. "/servers/Public?sortOrder=Asc&limit=100",
        Method = "GET"
    })

    local body = game:GetService("HttpService"):JSONDecode(req.Body)

    if body and body.data then
        for _, server in pairs(body.data) do
            if server.id ~= game.JobId then
                table.insert(servers, server.id)
            end
        end
    end

    if #servers > 0 then
        TeleportService:TeleportToPlaceInstance(game.PlaceId, servers[math.random(1, #servers)], player)
    else
        print("Tidak ada server lain yang tersedia.")
    end
end)

-- Rejoin Server Function
rejoinButton.MouseButton1Click:Connect(function()
    TeleportService:Teleport(game.PlaceId, player)
end)

-- Join Server by Job ID Function
joinJobIDButton.MouseButton1Click:Connect(function()
    local jobID = jobIDTextBox.Text
    if jobID ~= "" then
        TeleportService:TeleportToPlaceInstance(game.PlaceId, jobID, player)
    else
        print("Masukkan Job ID yang valid.")
    end
end)

-- Copy Job ID to Clipboard
copyJobIDButton.MouseButton1Click:Connect(function()
    local jobID = game.JobId
    clipboard:Set(jobID)
    print("Job ID telah disalin ke clipboard.")
end)

-- Anti AFK
local virtualUser = game:GetService("VirtualUser")
game.Players.LocalPlayer.Idled:Connect(function()
    virtualUser:Button2Down(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
    wait(1)
    virtualUser:Button2Up(Vector2.new(0, 0), workspace.CurrentCamera.CFrame)
end)

-- Minimize UI Function
local minimized = false
minimizeButton.MouseButton1Click:Connect(function()
    if minimized then
        frame.Size = UDim2.new(0, 350, 0, 300)
        minimizeButton.Text = "−"
    else
        frame.Size = UDim2.new(0, 350, 0, 30)
        minimizeButton.Text = "+"
    end
    minimized = not minimized
end)

-- Remove UI Function (X)
removeUIButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
    print("UI telah dihapus selamanya.")
end)
