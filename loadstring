hopServerButton.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
hopServerButton.TextColor3 = Color3.fromRGB(0, 0, 0)
hopServerButton.Parent = frame

-- Rejoin Server Button
local rejoinButton = Instance.new("TextButton")
rejoinButton.Text = "Rejoin Server"
rejoinButton.Size = UDim2.new(0, 150, 0, 40)
rejoinButton.Position = UDim2.new(0.5, -75, 0, 100)
rejoinButton.BackgroundColor3 = Color3.fromRGB(0, 200, 200)
